{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/blog",
      "destination": "/blog.html"
    },
    {
      "source": "/post/:slug",
      "destination": "/post.html"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
